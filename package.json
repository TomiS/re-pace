{
  "name": "pace-platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.1.0",
  "scripts": {
    "clean": "lerna exec --stream -- bsb -clean-world",
    "build:prod": "lerna exec --concurrency 1 --stream -- \"export BS_CMT_POST_PROCESS_CMD='gentype' && bsb -make-world\"",
    "build:lerna": "lerna exec --concurrency 1 --stream -- \"export BS_CMT_POST_PROCESS_CMD='gentype' && bsb -make-world -w\"",
    "build:yarn": "yarn workspaces run start",
    "build:oao": "oao all \"yarn run build\"",
    "workaround": "sed -i -e 's/\\[\"ignore\",/\\[\"inherit\",/g' ./node_modules/@lerna/child-process/index.js",
    "dev": "yarn clean && yarn workaround && yarn build:lerna",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack-dev-server",
    "webpack:watch": "webpack -w",
    "webpack:production": "NODE_ENV=production webpack"
  },
  "keywords": [
    "BuckleScript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bs-css": "^8.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reason-react": ">=0.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.0",
    "bs-platform": "5.0.0-dev.4",
    "clean-webpack-plugin": "^1.0.0",
    "gentype": "2.14.0",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.10.6",
    "oao": "^1.6.0",
    "webpack": "4.19.1",
    "webpack-cli": "2.1.4",
    "webpack-dev-server": "^3.1.14"
  }
}